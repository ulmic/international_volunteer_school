- title
= stylesheet_link_tag 'web/organizers'
= javascript_include_tag 'web/organizers'
.page-header
  %h2
    = t('.title')
.row
  .col-lg-12
    = render 'layouts/web/admin/shared/errors', object: @organizer
.row
  .col-md-6.col-md-offset-1
    = simple_form_for @organizer, url: { controller: 'web/organizers', action: :create }, html: { class: 'form-horizontal' } do |f|
      = f.input :email, as: :string
      = f.input :first_name, as: :string
      = f.input :patronymic, as: :string
      = f.input :last_name, as: :string
      = f.input :birth_date, as: :date_picker
      = f.input :municipality
      = f.input :locality, as: :grouped_select, collection: Localities.list_hash, group_method: :last
      = f.input :phone, as: :string, placeholder: t('placeholders.organizer.phone')
      = f.input :social_link, as: :string
      = f.input :home_adress, as: :string
      = f.input :experience
      = f.input :reason
      = f.input :activity_line
      = f.input :deals
      = f.input :pluses
      = f.input :minuses
      = f.input :accept_agreement, as: :boolean
      = f.button :submit, t('.send_request'), id: 'send_request'
